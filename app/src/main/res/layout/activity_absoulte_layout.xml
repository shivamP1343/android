<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="Deprecated">

    <TextView
        android:id="@+id/register_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="118dp"
        android:layout_y="13dp"
        android:text=" Absoulte Register Form"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="16dp"
        android:layout_y="63dp"
        android:text="Name:"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/name_edittext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="120dp"
        android:layout_y="50dp" />

    <TextView
        android:id="@+id/email_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="26dp"
        android:layout_y="124dp"
        android:text="Email:"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/email_edittext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="119dp"
        android:layout_y="99dp" />

    <TextView
        android:id="@+id/phone_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="23dp"
        android:layout_y="170dp"
        android:text="Phone:"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/phone_edittext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="120dp"
        android:layout_y="150dp" />

    <TextView
        android:id="@+id/password_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="8dp"
        android:layout_y="225dp"
        android:text="Password:"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/password_edittext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="123dp"
        android:layout_y="211dp"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="13dp"
        android:layout_y="270dp"
        android:text="Register" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="231dp"
        android:layout_y="275dp"
        android:text="Back" />
</AbsoluteLayout>